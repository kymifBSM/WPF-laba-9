<Window x:Class="WPF_laba9.zadanie2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_laba9"
        mc:Ignorable="d"
        Title="zadanie2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <RadioButton Content="Красный" Grid.Row="0" VerticalContentAlignment="Center" Checked="rColor"/>
        <RadioButton Content="Жёлтый" Grid.Row="1" VerticalContentAlignment="Center" Checked="yColor"/>
        <RadioButton Content="Зелёный" Grid.Row="2" VerticalContentAlignment="Center" Checked="gColor"/>
        <RadioButton Content="Все цвета" Grid.Row="2" VerticalContentAlignment="Center" Checked="aColor" Margin="315 110 0 0"/>

        <Button x:Name="red" Grid.Column="1" Grid.Row="0" Click="Back" Content="✋" FontSize="50"/>
        <Button x:Name="yellow" Grid.Column="1" Grid.Row="1" Content="👏" FontSize="50"/>
        <Button x:Name="green" Grid.Column="1" Grid.Row="2" Click= "GO" Content="👉" FontSize="50"/>
        

    </Grid>
</Window>
